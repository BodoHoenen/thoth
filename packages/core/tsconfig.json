{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "module": "esnext",
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "strict": false,
    "outDir": "./dist/",
    "rootDir": ".",
    "declaration": true,
    "composite": true,
    "noEmit": false,
    "target": "ES2021",
    "sourceMap": true
  },
  "include": ["./*.ts", "./**/*.ts", "./**/*.tsx"],
  "exclude": ["./node_modules/", "./dist/", "./test", "./data"]
}
